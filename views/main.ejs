<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-6 p-4 text-center">
            <form action="http://localhost:8080/login" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label">Usuario:</label>
                    <input type="text" class="form-control" name="username" placeholder="ej: pepe">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Precio:</label>
                    <input type="password" class="form-control" name="password" placeholder="ej: 800">
